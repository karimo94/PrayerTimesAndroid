<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent">
                <TextView
                        android:id="@+id/verseId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingTop="10dp"
                        android:text="1"
                        android:layout_weight="2"
                        android:textSize="20dp"
                        android:paddingLeft="10dp"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/verseText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingTop="10dp"
                    android:text="بِسۡمِ ٱللَّهِ ٱلرَّحۡمَٰنِ ٱلرَّحِيمِ"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:paddingBottom="10dp">
                <TextView
                        android:id="@+id/verseWhitespace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingTop="10dp"
                        android:text=" "
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:paddingLeft="10dp"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/verseTransliteration"
                    android:layout_below="@+id/verseText"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:text="ِBismi Allahi alrrahmani alrraheemi"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="2"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>