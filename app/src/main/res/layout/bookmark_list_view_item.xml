<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="12dp"
        app:cardCornerRadius="16dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="#efefef"
        android:layout_margin="5dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/bookmark_surah_name"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="@string/action_bookmarks"/>
            <TextView
                    android:layout_below="@+id/bookmark_surah_name"
                    android:id="@+id/bookmark_surah_arabic"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="@string/action_bookmarks"/>
            <TextView
                    android:layout_below="@+id/bookmark_surah_arabic"
                    android:id="@+id/bookmark_surah_verse_id"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="@string/action_bookmarks"/>
        </RelativeLayout>
        <ImageView
                android:id="@+id/deleteBookmark"
                android:layout_width="138dp"
                android:layout_height="29dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_remove"
                android:contentDescription="TODO"/>
    </LinearLayout>
    

</androidx.cardview.widget.CardView>


